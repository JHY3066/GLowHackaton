<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/some_id"
        android:layout_width="412dp"
        android:layout_height="915dp"
        android:clipToOutline="true"
        android:background="#FBE5B8">

        <TextView
            android:id="@+id/title"
            android:layout_width="384dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp"
            android:text="* 정보를 정확하게 입력해주세요"
            android:textAppearance="@style/some_id"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:orientation="vertical"
            android:background="#D9D9D9">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:hint="가게 이름을 입력해주세요"
                android:gravity="center"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:hint="주소를 입력해주세요"
                android:gravity="center"/>
            <EditText
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:hint="전화번호를 입력해주세요"
                android:gravity="center"/>

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:hint="영업시간을 입력해주세요"
                android:gravity="center"/>

            <EditText
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:hint="메뉴와 가격을 입력해주세요\n ex) 제육덮밥 7000"
                android:gravity="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/add"
            android:layout_width="363dp"
            android:layout_height="89dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="576dp"
            android:background="@drawable/round"
            android:text="등록하기"
            android:textAppearance="@style/some_idb"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>